{
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.DS_Store": true,
        "**/.git": false,
        "**/.hg": true,
        "**/.svn": true,
        "**/*.pyc": {
            "when": "$(basename).py"
        },
        "**/CVS": true,
        "**/Thumbs.db": true
    }
}
